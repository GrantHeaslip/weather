{
    "name": "weather",
    "version": "0.1.0",
    "description": "Node.js (server-rendered) rewrite of weather.grant.heaslip.me.",
    "homepage": "http://weather.grant.heaslip.me/",
    "author": {
        "name": "Grant Heaslip",
        "email": "grant@heaslip.me",
        "url": "https://grant.heaslip.me/"
    },
    "private": true,
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "start-dev": "node ./node_modules/nodemon/bin/nodemon.js server.js",
        "heroku-postbuild": "gulp build"
    },
    "engines": {
        "node": "^10.0.0"
    },
    "dependencies": {
        "catbox-redis": "^4.1.0",
        "del": "^3.0.0",
        "ejs": "^2.5.8",
        "gulp": "^3.9.1",
        "gulp-clean-css": "^3.9.3",
        "gulp-rev": "^8.1.1",
        "gulp-rev-replace": "^0.4.4",
        "hapi": "^17.3.1",
        "inert": "^5.1.0",
        "run-sequence": "^2.2.1",
        "throng": "^4.0.0",
        "vision": "^5.3.2"
    },
    "devDependencies": {
        "eslint": "^4.18.0",
        "nodemon": "^1.17.3",
        "stylelint": "^9.1.1",
        "stylelint-config-standard": "^18.2.0"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "browser": true,
            "es6": true,
            "node": true
        },
        "parserOptions": {
            "ecmaVersion": 2017,
            "sourceType": "module"
        },
        "rules": {
            "indent": [
                "error",
                4,
                {
                    "outerIIFEBody": 0
                }
            ],
            "linebreak-style": [
                "error",
                "unix"
            ],
            "no-console": "off",
            "no-unused-vars": [
                "warn",
                {
                    "args": "after-used",
                    "argsIgnorePattern": "^_.+"
                }
            ],
            "quotes": [
                "error",
                "single"
            ],
            "semi": [
                "error",
                "always"
            ]
        }
    },
    "eslintIgnore": [
        "js/*.min.js"
    ],
    "stylelint": {
        "extends": "stylelint-config-standard",
        "rules": {
            "at-rule-empty-line-before": null,
            "comment-empty-line-before": null,
            "comment-whitespace-inside": null,
            "declaration-empty-line-before": null,
            "indentation": 4,
            "length-zero-no-unit": null,
            "no-descending-specificity": null,
            "rule-empty-line-before": null,
            "selector-list-comma-newline-after": null,
            "shorthand-property-no-redundant-values": null,
            "selector-pseudo-element-colon-notation": null
        }
    }
}
